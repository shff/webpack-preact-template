{
  "license": "MIT",
  "scripts": {
    "serve": "webpack-dev-server --mode development --hot --inline",
    "start": "webpack --mode development",
    "build": "webpack --mode production",
    "rebuild": "yarn clean && yarn build",
    "clean": "rm -rf dist",
    "prettify": "prettier --write \"src/*.{js*,ts*}\"",
    "lint": "eslint \"src/*.{js*,ts*}\"",
    "lint:css": "stylelint '**/*.less' --syntax less",
    "lint:watch": "esw \"src/*.{js*,ts*}\" -w --color --clear",
    "test": "jasmine",
    "e2e": "cypress run -C false --config video=false,integrationFolder=src,supportFile=false,pluginsFile=false,testFiles=**/*.spec.ts"
  },
  "dependencies": {
    "preact": "^10.5.13"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/plugin-proposal-optional-chaining": "^7.13.0",
    "@babel/plugin-transform-react-jsx": "^7.13.12",
    "@babel/plugin-transform-runtime": "^7.14.3",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-react": "^7.13.13",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.2.4",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^4.5.2",
    "mini-css-extract-plugin": "^1.6.0",
    "purify-css": "^1.2.6",
    "purifycss-webpack": "^0.7.0",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.1.0",
    "typescript": "^4.3.5",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "^3.11.2"
  },
  "optionalDependencies": {
    "@types/cypress": "^1.1.3",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^3.10.1",
    "cypress": "^7.2.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-watch": "^7.0.0",
    "husky": "^6.0.0",
    "jasmine": "^3.7.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-proposal-optional-chaining",
      "@babel/plugin-transform-runtime",
      [
        "@babel/transform-react-jsx",
        {
          "pragma": "h"
        }
      ]
    ]
  },
  "browserslist": [
    ">0.25%",
    "not ie 11",
    "not op_mini all"
  ],
  "eslintConfig": {
    "ignorePatterns": [
      "node_modules/",
      "webpack.config.js"
    ],
    "extends": [
      "prettier",
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-plugin/recommended",
      "plugin:react/recommended",
      "plugin:promise/recommended",
      "plugin:cypress/recommended"
    ],
    "plugins": [
      "@typescript-eslint/eslint-plugin",
      "prettier",
      "react",
      "promise",
      "cypress"
    ],
    "env": {
      "cypress/globals": true
    },
    "parserOptions": {
      "parser": "@typescript-eslint/parser",
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      }
    },
    "globals": {
      "document": true
    },
    "settings": {
      "react": {
        "pragma": "h",
        "version": "17"
      }
    },
    "rules": {
      "prettier/prettier": "error",
      "promise/prefer-await-to-callbacks": "error",
      "promise/prefer-await-to-then": "error",
      "indent": "off",
      "import/no-unresolved": "off",
      "react/no-unknown-property": "off"
    }
  },
  "stylelint": {
    "processors": [
      "stylelint-processor-html"
    ],
    "extends": "stylelint-config-standard"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,css,json,md,vue}": [
      "prettier --write",
      "eslint"
    ]
  }
}
